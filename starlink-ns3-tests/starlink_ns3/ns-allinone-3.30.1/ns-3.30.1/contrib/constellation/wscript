# def configure(conf):
#     conf.check_nonfatal(header_name='stdint.h', define_name='HAVE_STDINT_H')

def build(bld):
    module = bld.create_ns3_module('constellation', ['core'])
    module.source = [
        'model/constellation.cc',
        'helper/constellation-helper.cc',
        ]

    module_test = bld.create_ns3_module_test_library('constellation')
    module_test.source = [
        'test/constellation-test-suite.cc',
        ]
    # Tests encapsulating example programs should be listed here
    if (bld.env['ENABLE_EXAMPLES']):
        module_test.source.extend([
        #    'test/constellation-examples-test-suite.cc',
             ])

    headers = bld(features='ns3header')
    headers.module = 'constellation'
    headers.source = [
        'model/constellation.h',
        'helper/constellation-helper.h',
        ]

    if bld.env.ENABLE_EXAMPLES:
        bld.recurse('examples')

    # bld.ns3_python_bindings()

